<div class="container">
  <div class="header">

    <div class="logo_and_search">
      <div class="logo">
        logo here
      </div>
      <div class="search">
        <input type="text" name="" placeholder="&#xf002;  Search team, game or player" class="searchbar">
      </div>
    </div>

    <% if user_signed_in? %>
      <div class="user_info">
        <div class="btn_logged_in_user">
          <%= current_user.email %>
        </div>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn_logout btn_default"%>
      </div>
    <% else %>
      <%= link_to "Login", teams_index_path, class: "btn_login btn_default"%>
    <% end %>

  </div>
</div>
